<div class="signup">
  <h2>Welcome to Crownshot </h2>
  <h5>Become a stylist</h5>
  <h3><strike>Have a good day.</strike> Make it a great day </h3>
  <br>
  <%= render 'shared/errors', obj: @user %>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-3 form-space">
        <%= form_for(@user, :html=>{class:"form-horizontal", role: "form"}) do |f| %>
          <%= render 'form', :f => f %>
          <%= f.hidden_field :is_stylist?, :value => true %>
         
          <div class="form-group">
            <div class="col-sm-2 col-sm-offset-4">
              <%= f.submit "Sign Up", class:"btn btn-danger"%>
            </div>
          </div>
        <% end %>
      </div>
    </div> 
</div>