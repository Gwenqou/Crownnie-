<div class="editprofile"> 
  <h2>Welcome to Crownshot </h2>
  <h3><strike>Have a good day.</strike> Make it a great day </h3><br>
  <%= render 'shared/errors', obj: @user %>
  
  <div class="profile_upload">
    <%= image_tag @user.avatar.url if @user.avatar?%>
  </div>
  
  <% @user.menus.each do |m| %>
    <%=image_tag m.menu.url(:thumb) %>
    <%= link_to 'Delete',m, method: :delete %>
  <% end %>
  
  <div class="row">
    <div class="col-sm-8 col-sm-offset-3 form-space">
      <%= form_for(@user, :html=>{class:"form-horizontal", role: "form", multipart: true}) do |f| %>
        <p>Profile</p>
        <%= f.file_field :avatar, accept: 'image/jpeg, image/gif, image/png'%>
        <p>Menu</p>
        <%=f.fields_for :menus, Menu.new do |menu| %>
          <%= menu.file_field :menu %>
        <% end %>
        
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :first_name, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
        </div>
        
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :last_name, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :last_name, class:"form-control" %>
          </div>
        </div>
        <hr>
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :username, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :username, class:"form-control" %>
          </div>
        </div>
        
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :email, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.email_field :email, class:"form-control" %>
          </div>
        </div>
        
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :password, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, class:"form-control" %>
          </div>
        </div>
        <hr>
      
        
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :salon_name, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :salon_name, class:"form-control" %>
          </div>
        </div>
        
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :salon_location, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :salon_location, class:"form-control" %>
          </div>
        </div>
        
        <div class="form-group form-color">
          <div class="col-sm-2">
            <%= f.label :appointment_number, class:"control-label"%>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :appointment_number, class:"form-control" %>
          </div>
        </div>
        
        <p>Latitude</p>
        <%= @user.latitude %>
        
        <p>Longitude</p>
        <%=@user.longitude %>
        
        <div class="form-group">
          <div class="col-sm-2 col-sm-offset-4">
            <%= f.submit  class:"btn btn-danger"%>
          </div>
        </div>
      <% end %>
      
   
      
      
      
    </div>
  </div> 
</div>