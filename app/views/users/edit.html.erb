<div class="editprofile"> 
  <h2>Every Day is a good hair day</h2>
  <h3>Release your confidence</h3><br>
  <%= render 'shared/errors', obj: @user %>
  
  <div class="row form-field">
    <div class="col-sm-2 col-sm-offset-1 profile_upload">
      <%= image_tag @user.avatar.url(:avatar) if @user.avatar?%>
      <br>
      <%= form_for(@user, :html=>{class:"form-horizontal", role: "form", multipart: true}) do |f| %>
        <p>Profile Picture</p>
          <%= f.file_field :avatar, accept: 'image/jpeg, image/gif, image/png' %>
          <br>
          <%= f.submit "Upload", class:"btn btn-sm"%>
      <% end %>
    </div>
    
    <div class="col-sm-8 col-sm-offset-1">
    <%= form_for(@user, :html=>{class:"form-horizontal", role: "form", multipart: true}) do |f| %>
      <%= render 'editform', :f => f %>
      <div class="form-group">
        <div class="col-sm-2 col-sm-offset-4">
          <%= f.submit "Update", class:"btn btn-danger"%>
        </div>
      </div>
    </div>
    <% end %>
    
  </div> 
</div>