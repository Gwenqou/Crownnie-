<% content_for(:description){ "Discover the hottest hair stylists in your area and find the hairstyle that makes you shine. You can find hairstyles in categories such as styling, color, bridal & prom!"} %> 
<% content_for(:keywords){ 'stylist, hair salon, salon, haircut, color,wedding, prom, bride, haircut, crownshot'} %> 
<script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyAnP42cpqrM8iSm_b2d5VhhqXg0mNXPtLk"></script>

<div class="page1">
  <div class="jumbotron">
    <div class="col-md-6 col-md-offset-3 jumbo">
      <h1>EVERY DAY IS A GOOD HAIR DAY</h1>
      <div class="caption"><h5>Discover the hottest hair stylists in New York City</h5></div>
    </div>  
  </div>
  <section class="section-daily-picture">
    <h2>Take a Peak: Fabulous Hairstyles</h2>
            
  <div class="row box-section">
    <div class="col-sm-offset-1 col-sm-3 ">
      <div class="box">
        <%= image_tag "mencut.png", alt: "mens cut"  %>
      </div>
      <h3>Men's Cut</h3>
      </div>
    <div class="col-sm-3 ">
       <div class="box">
          <%= image_tag "womencut2.png", alt: "womens cut" %>
         
        </div>
      <h3>Women's cut</h3>
    </div>
    <div class="col-sm-3 ">
      <div class="box">
        <%= image_tag "redcolor.png", alt: "color" %>  
      </div>
      <h3>Color</h3>
    </div>
   </div>
 </section>
 <section class="section-special-picture">
    <div class="row">
      <h2>Take a Peak: The Perfect Hairstyle <br>for when you say I do</h2>
    </div>
    <div class="row ">
      <div class="col-sm-3 col-sm-offset-3 special-box ">
        <%= image_tag "bridal.jpg", alt: "bridal" %>
        <h3>Bridal</h3>
      </div>
      <div class="col-sm-3 special-box">
        <%= image_tag"prom.png", alt: "prom" %>
        <h3>Prom</h3>
      </div>
    </div>
  </section>
  <section class="section-stylist">
    <div class="row">
      <h2>Stylist Profile</h2>
    </div>
    <div class="row ">
      <div class="col-sm-6 steps-box">
        <%= image_tag "sam1.png", alt: "stylist profile", class:"profile-image" %>
      </div>
      <div class="col-sm-6 steps-box">
        <div class="works-step">
            <div class="circle">1</div>
            <div class="text">Click on the hairstyles you like.</div>
        </div>
         <div class="works-step">
            <div class="circle">2</div>
            <div class="text">Check out the awesome stylist.</div>
        </div>
         <div class="works-step">
            <div class="circle">3</div>
            <div class="text">Save the hairstyle in your wishlist.</div>
        </div>
      </div>
    </div>
  </section>
  
  
  <%=render 'layouts/footer' %>
</div>

<script>
  function initialize() {
    var input = document.getElementById('searchTextField');
    var autocomplete = new google.maps.places.Autocomplete(input);
    }
    google.maps.event.addDomListener(window, 'load', initialize);

    $('.box').mouseover(function(){
      $(this).find('.credit').fadeIn(200);
    });
    
    $('.box').mouseleave(function(){
      $(this).find('.credit').fadeOut(200);
    });
</script>