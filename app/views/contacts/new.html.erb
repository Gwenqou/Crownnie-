<div class="contact">
  <h2>Send us a message</h2>
  <ul class="list">
    <li>We value your input</li>
    <li>Any suggestions are always welcome</li>
    <li>We look forward to hearing from you</li>
  </ul>
  <hr>
  <%= form_for @contact, :html=>{class:"form-horizontal", role: "form"} do |f| %>
    <div class="form-group form-color">
      <div class="col-sm-offset-3 col-sm-2">
        <%= f.label :name, class:"control-label"%>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>
    
     <div class="form-group form-color">
      <div class="col-sm-offset-3 col-sm-2">
        <%= f.label "Email(optional)", class:"control-label"%>
      </div>
      <div class="col-sm-4">
        <%= f.email_field :email, class:"form-control" %>
      </div>
    </div>
    
    <div class="form-group form-color">
      <div class="col-sm-offset-3 col-sm-2">
        <%= f.label :message, class:"control-label"%>
      </div>
      <div class="col-sm-4">
        <%= f.text_area :message, class:"form-control" %>
      </div>
    </div>  
    <br>
    <div class="form-group">
      <div class="col-sm-2 col-sm-offset-5">
        <div class="submit-btn">
          <%= f.submit 'Send',  class:"btn btn-danger"%>
        </div>
      </div>
    </div>
  <% end %>
  <hr>
  <p>or email us at:</p>
  <p>info@crownshot.com</p>
  <div class="space"></div>
</div>

<%=render 'layouts/footer' %>